<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#90CAF9">


    <EditText
        android:layout_width="295sp"
        android:layout_height="60sp"
        android:inputType="textPersonName"
        android:padding="10dip"
        android:id="@+id/Username1"
        android:background="@drawable/rounded_edittext"
        android:hint=" Name"
        android:textColorHint="#1E88E5"
        android:textColor="#2196F3"
        android:drawableLeft="@drawable/user"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/buttonLogin"
        android:layout_marginTop="112dp" />

    <EditText
        android:layout_width="295sp"
        android:layout_height="55sp"
        android:inputType="textPassword"
        android:id="@+id/editTextPassword"
        android:textColor="#2196F3"
        android:background="@drawable/rounded_edittext"
        android:padding="10dip"
        android:hint=" Password"
        android:textColorHint="#1E88E5"
        android:drawableLeft="@drawable/paswd"
        android:layout_below="@+id/Username1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/main_register"
        android:background="@drawable/oval"
        android:elevation="10dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/fbtn"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="25sp"
        android:textColor="#E3F2FD"
        android:id="@+id/buttonLogin"
        android:background="@drawable/btn"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/editTextPassword"
        android:layout_alignStart="@+id/editTextPassword"
        android:layout_alignEnd="@+id/editTextPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to the Login Page!!"
        android:textSize="20sp"
        android:textColor="#0D47A1"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
